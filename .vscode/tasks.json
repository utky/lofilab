{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tofu plan",
      "type": "shell",
      "command": "tofu -chdir=environments/production init; tofu -chdir=environments/production/ plan",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "tofu apply",
      "type": "shell",
      "command": "tofu -chdir=environments/production init; tofu -chdir=environments/production/ apply -auto-approve",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
